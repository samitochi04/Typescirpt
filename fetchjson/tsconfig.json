{
    "compilerOptions": {
      "module": "ESNext",   // Use ESNext module system
      "target": "ESNext",   // Ensure TypeScript compiles to ESNext
      "moduleResolution": "Node",
      "esModuleInterop": true,  // Enable compatibility with CommonJS modules
      "resolveJsonModule": true, // Allow importing JSON files
      "outDir": "./dist", // Where compiled JS files will go
      "skipLibCheck": true
    },
    "include": ["index.ts"]  // Specify the files to compile
  }
  